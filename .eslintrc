env:
  es6: true
  node: true

ecmaFeatures:
  arrowFunctions: true
  binaryLiterals: true
  blockBindings: true
  classes: true
  forOf: true
  generators: true
  objectLiteralShorthandMethods: true
  objectLiteralShorthandProperties: true
  octalLiterals: true
  jsx: true
  templateStrings: true
  modules: true

rules:
  prefer-const: 2
  no-debugger: 2
  no-dupe-args: 2
  no-dupe-keys: 2
  no-duplicate-case: 2
  no-ex-assign: 2
  no-unreachable: 2
  valid-typeof: 2
  quotes: [2, 'single', 'avoid-escape']
  indent: 2
  comma-spacing: 2
  semi: 2
  space-infix-ops: 2
  space-return-throw-case: 2
  space-before-function-paren: [2, 'always']
  space-before-blocks: [2, 'always']
  new-parens: 2
  max-len: [2, 110, 2]
  no-multiple-empty-lines: [2, {max: 2}]
  eol-last: 2
  no-trailing-spaces: 2
  space-after-keywords: 2

